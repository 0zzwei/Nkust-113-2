@model WeatherDataMVC.Models.Station
@{
    ViewData["Title"] = "觀測站詳情";
}
<h2>@ViewData["Title"]</h2>
<dl class="row">
    <dt class="col-sm-2">站名</dt>
    <dd class="col-sm-10">@Model.StationName</dd>
    <dt class="col-sm-2">站點ID</dt>
    <dd class="col-sm-10">@Model.StationId</dd>
    <dt class="col-sm-2">觀測時間</dt>
    <dd class="col-sm-10">@Model.ObsTime?.DateTime</dd>
    <dt class="col-sm-2">海拔</dt>
    <dd class="col-sm-10">@Model.GeoInfo?.StationAltitude</dd>
    <dt class="col-sm-2">日射量</dt>
    <dd class="col-sm-10">@Model.WeatherElement?.SolarRadiation</dd>
</dl>
<a class="btn btn-secondary" asp-action="Index">返回列表</a>
