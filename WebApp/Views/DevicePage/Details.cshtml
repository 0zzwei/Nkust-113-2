@model WebApp.Models.Dtos.DeviceDto

@{
    ViewData["Title"] = "Device Details";
}

<h1>Device Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>@Model.DisplayName</h4>
                <span class="badge bg-primary">@Model.DeviceCode</span>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DisplayName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DisplayName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DeviceCode)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DeviceCode)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RemoteId)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.RemoteId)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IpAddress)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.IpAddress)</dd>
                        </dl>
                    </div>
                </div>

                @if (Model.AccessGrants != null && Model.AccessGrants.Any())
                {
                    <div class="row mb-3">
                        <div class="col">
                            <h5>Authorized Cards:</h5>
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Card Name</th>
                                        <th>Card Number</th>
                                        <th>Member Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var grant in Model.AccessGrants)
                                    {
                                        <tr>
                                            <td>@grant.Card?.DisplayName</td>
                                            <td>@grant.Card?.CardNumber</td>
                                            <td>@grant.Card?.MemberName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        此設備尚未授權任何卡片。
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
