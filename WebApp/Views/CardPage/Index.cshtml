@model IEnumerable<WebApp.Models.Dtos.CardDto>

@{
    ViewData["Title"] = "Card List";
}

<h1>Card List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDisabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnabledFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnabledTo)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @if (item.IsDisabled)
                {
                    <span class="badge bg-danger">Disabled</span>
                }
                else
                {
                    <span class="badge bg-success">Active</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnabledFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnabledTo)
            </td>            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="ManageWhitelist" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">管理白名單</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
