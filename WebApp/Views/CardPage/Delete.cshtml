@model WebApp.Models.Dtos.CardDto

@{
    ViewData["Title"] = "Delete Card";
}

<h1>Delete Card</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this card?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>@Model.DisplayName</h4>
                <span class="@(Model.IsDisabled ? "badge bg-danger" : "badge bg-success")">
                    @(Model.IsDisabled ? "Disabled" : "Active")
                </span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DisplayName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DisplayName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CardNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CardNumber)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MemberName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.MemberName)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MemberId)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.MemberId)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EnabledFrom)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EnabledFrom)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EnabledTo)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EnabledTo)</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
