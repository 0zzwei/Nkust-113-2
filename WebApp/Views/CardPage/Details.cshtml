@model WebApp.Models.Dtos.CardDto

@{
    ViewData["Title"] = "Card Details";
}

<h1>Card Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>@Model.DisplayName</h4>
                <span class="@(Model.IsDisabled ? "badge bg-danger" : "badge bg-success")">
                    @(Model.IsDisabled ? "Disabled" : "Active")
                </span>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DisplayName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DisplayName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CardNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CardNumber)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MemberName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.MemberName)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MemberId)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.MemberId)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EnabledFrom)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EnabledFrom)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EnabledTo)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EnabledTo)</dd>
                        </dl>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <h5>Remarks:</h5>
                        <p class="card-text">@Model.Remark</p>
                    </div>
                </div>

                @if (Model.AccessGrants != null && Model.AccessGrants.Any())
                {
                    <div class="row mb-3">
                        <div class="col">
                            <h5>Access Permissions:</h5>
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Device</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var grant in Model.AccessGrants)
                                    {
                                        <tr>
                                            <td>@grant.Device?.DisplayName</td>
                                            <td>@grant.Remark</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>            <div class="card-footer">
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="ManageWhitelist" asp-route-id="@Model.Id" class="btn btn-success">管理白名單</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
